{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
        "useEditorconfig": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
            "correctness": {
                "noUnusedVariables": "error",
                "noUnusedImports": "error"
            }
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "none"
		}
	},
    "json": {
        "formatter": {
            "enabled": true,
            "trailingCommas": "none"
        }
    }
}
